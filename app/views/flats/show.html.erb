<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">Airban</span>
    <%= link_to "Go back", flats_path, class: "btn btn-outline-primary"%>
  </div>
  </nav>

<div class="container-flat ">
<img class="img-fluid flat-img" src="https://images.unsplash.com/photo-1554995207-c18c203602cb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80">
  <div class="fin-all row">
    <div class="text col-lg-8">
        <div class="info-flat p-3 mb-3">
            <h1><%= @flat.name  %> </h1>
            <p> <%= @flat.address  %></p>

      </div>

      <div class="info-flat p-3 mb-3">
          <h1>A bit more about this flat</h1>
          <p> <%= @flat.description  %></p>

      </div>

      <div class="info-flat p-3 mb-3">
          <h1>Details</h1>
          <p><i class="fa-solid fa-user-group"></i> <%= @flat.number_of_guests  %>  <i class="fa-solid fa-euro-sign"></i> <%= @flat.price_per_night  %> </p>
      </div>
    </div>
    <div class="card text-center col-lg-4">
        <div class="card-body">
          <h5 class="card-title">Book this place</h5>
          <form>
            <div class="form-group row mb-2">
                <label class="col-lg-4 col-form-label">From</label>
                <div class="col-lg-8">
                  <input type="date" class="col-lg-2 form-control">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label">To</label>
                <div class="col-lg-8">
                  <input type="date" class="col-lg-2 form-control">
                </div>
            </div>
            <a href="#" class="btn btn-success mt-3">Book</a>
          </form>

        </div>
    </div>
  </div>




</div>
