<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">Airban</span>
    <%= link_to "Go back", flats_path, class: "btn btn-outline-primary"%>
  </div>
</nav>
<div class="container mt-3">
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :number_of_guests %>
  <%= f.input :price_per_night %>
  <%= f.submit  class: "btn btn-dark"%>
<% end %>

</div>
